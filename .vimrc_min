set number
set relativenumber
set autoindent
set tabstop=2
set shiftwidth=2
set expandtab
syntax on
colorscheme desert
" set cursorline
set showmatch
set pastetoggle=<F2>
set backspace=indent,eol,start

" Use system clipboard for yank and paste
set clipboard=unnamedplus

" Custom mappings for clipboard operations
" Type \y to save to clipboard
nmap <Leader>y "+y
nmap <Leader>Y "+yg_
nmap <Leader>d "+d
nmap <Leader>D "+d$
nmap <Leader>p "+p
nmap <Leader>P "+P
vmap <Leader>y "+y
vmap <Leader>d "+d
vmap <Leader>p "+p
vmap <Leader>P "+P
